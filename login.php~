<?php
$_SESSION["email"] = $_POST["email"];
	echo $_POST['email'];

if ($_POST['full_name']) {
    echo $_POST['full_name'];
} else{
	if($stmt = $mysqli->prepare('select * from users where email=$_POST["email"] && password=$_POST["password"]')) {
	  	$stmt->execute();
	 	$stmt->bind_result( $password );
		if($stmt != null)
			{
				header('Location: homePage.php');
				exit;
		}
		else{
			header('Location: index.html');
			echo "Invalid email or password";
			exit;
		}
}
}
?>
